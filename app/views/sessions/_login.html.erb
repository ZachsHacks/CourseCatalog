
<div class="container">
	<div class="flash">
		<%= flash.now[:danger] if flash.now[:danger] != nil %>
	</div>
	<br>
	<%= form_for(:session, url: login_path, layout: :basic)do |f| %>
	<%= f.email_field :email %>
	<%= f.password_field :password %>
	<%= f.check_box :remember_me, checked: true %>
	<%= f.submit 'Sign in' %>
	<% end %>
	<%= link_to 'New User? Click here to sign up!', new_user_path %>
</div>


<style>
.flash{
	background-color: #f2dede;
	border-color: #eed3d7;
	color: #b94a48;
	text-align: left;
	font-weight: bold;
}
</style>
